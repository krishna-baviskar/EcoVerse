rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // This function checks if a user is updating only their allowed profile fields.
    // They can update 'displayName', 'photoURL', or 'location'.
    // It makes sure no other fields are being illegally changed.
    function isUpdatingProfile(requestData, resourceData) {
      // The list of fields a user is allowed to change.
      let allowedFields = ['displayName', 'photoURL', 'location'];
      
      // Get all the fields the user is trying to change in this request.
      let incomingKeys = request.resource.data.keys();
      
      // Ensure the incoming request only contains keys from the allowed list.
      let allKeysAreAllowed = incomingKeys.hasAll(allowedFields) && incomingKeys.hasAny(allowedFields) == false;

      // Check that protected fields are NOT being changed.
      let protectedFieldsUnchanged = requestData.uid == resourceData.uid &&
                                     requestData.email == resourceData.email &&
                                     requestData.ecoPoints == resourceData.ecoPoints;
                                     
      return protectedFieldsUnchanged;
    }

    // This function securely checks if a user is ONLY incrementing their ecoPoints.
    function isIncrementingEcoPoints(requestData, resourceData) {
      // This ensures that 'ecoPoints' is the ONLY field in the update request.
      let onlyEcoPointsIsPresent = request.resource.data.keys().size() == 1 && 'ecoPoints' in request.resource.data;
      
      // This is the crucial part: it verifies that the new ecoPoints value is
      // greater than the old one, which is how increments are validated.
      let pointsAreIncreased = requestData.ecoPoints > resourceData.ecoPoints;
                                  
      return onlyEcoPointsIsPresent && pointsAreIncreased;
    }

    // USERS collection rules
    match /users/{userId} {
      // Anyone can read any profile for leaderboards.
      allow read: if true;

      // A user can only create their own profile document.
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && request.resource.data.ecoPoints == 0;

      // A user can EITHER update their profile (e.g., location) OR increment their ecoPoints.
      allow update: if isOwner(userId) && 
                       (isUpdatingProfile(request.resource.data, resource.data) ||
                        isIncrementingEcoPoints(request.resource.data, resource.data));

      // Users cannot delete their own accounts through the app.
      allow delete: if false;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isUpdatingProfile(requestData, resourceData) {
      // Check if only allowed fields are being updated
      let allowedFields = ['displayName', 'photoURL', 'location'];
      let otherFieldsUnchanged = requestData.keys().removeAll(allowedFields).size() == 0;
      
      // Ensure protected fields are not being changed
      let protectedFieldsUnchanged = requestData.uid == resourceData.uid &&
                                     requestData.email == resourceData.email &&
                                     requestData.ecoPoints == resourceData.ecoPoints;

      return otherFieldsUnchanged && protectedFieldsUnchanged;
    }

    function isIncrementingEcoPoints(requestData, resourceData) {
      // Check that only ecoPoints is being updated
      let onlyEcoPointsChanged = requestData.keys().removeAll(['ecoPoints']).size() == 0;
      
       // Ensure ecoPoints are only ever increased
      let pointsIncreased = requestData.ecoPoints > resourceData.ecoPoints;

      // Ensure other fields are not being changed
      let otherFieldsUnchanged = requestData.uid == resourceData.uid &&
                                  requestData.email == resourceData.email &&
                                  requestData.displayName == resourceData.displayName &&
                                  requestData.photoURL == resourceData.photoURL &&
                                  requestData.location == resourceData.location;
                                  
      return onlyEcoPointsChanged && pointsIncreased && otherFieldsUnchanged;
    }

    // USERS collection
    match /users/{userId} {
      // Anyone can see anyone else's profile for leaderboard purposes
      allow read: if true;

      // A user can only create their own profile
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && request.resource.data.ecoPoints == 0;

      // A user can update their own profile OR increment their ecoPoints
      allow update: if isOwner(userId) && 
                       (isUpdatingProfile(request.resource.data, resource.data) ||
                        isIncrementingEcoPoints(request.resource.data, resource.data));

      // Users cannot delete their profiles
      allow delete: if false;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // This function checks if a user is updating ONLY their allowed profile fields.
    function isUpdatingAllowedProfileFields() {
      // The list of fields a user is allowed to change on their profile.
      let allowedFields = ['displayName', 'photoURL', 'location'];
      // Get all the fields the user is trying to change in this request.
      let incomingKeys = request.resource.data.diff(resource.data).affectedKeys();

      // Ensure that every key in the incoming request is in our allowed list.
      return incomingKeys.hasOnly(allowedFields);
    }

    // This function securely checks if a user is ONLY incrementing their ecoPoints.
    function isSecurelyIncrementingEcoPoints() {
        let changes = request.resource.data.diff(resource.data);
        let affectedKeys = changes.affectedKeys();

        // Check if 'ecoPoints' is the only field being changed.
        let onlyEcoPointsAffected = affectedKeys.size() == 1 && affectedKeys.hasAny(['ecoPoints']);
        
        // Check if 'ecoPoints' and 'completedActions' are being changed together.
        let ecoPointsAndActionsAffected = affectedKeys.size() == 2 && affectedKeys.hasAll(['ecoPoints', 'completedActions']);
        
        // Verify that ecoPoints are only ever increased.
        let pointsAreIncreased = request.resource.data.ecoPoints > resource.data.ecoPoints;

        // The update is valid if it's ONLY ecoPoints OR it's ecoPoints AND completedActions.
        return pointsAreIncreased && (onlyEcoPointsAffected || ecoPointsAndActionsAffected);
    }


    // USERS collection rules
    match /users/{userId} {
      // Anyone can read any profile for leaderboards.
      allow read: if true;

      // A user can only create their own profile document.
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && request.resource.data.ecoPoints == 0;

      // A user can EITHER update their profile OR increment their ecoPoints (with or without completedActions).
      allow update: if isOwner(userId) && 
                       (isUpdatingAllowedProfileFields() || isSecurelyIncrementingEcoPoints());

      // Users cannot delete their own accounts through the app.
      allow delete: if false;
    }
  }
}

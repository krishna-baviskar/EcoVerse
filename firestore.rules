rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isUpdatingProfile(requestData, resourceData) {
      // Defines the fields a user is allowed to update.
      let allowedFields = ['displayName', 'photoURL', 'location'];
      // Checks that the request is not trying to modify any fields *other* than the allowed ones.
      let onlyAllowedFieldsArePresent = request.resource.data.keys().removeAll(allowedFields).size() == 0;
      
      // Ensures protected fields are not being changed by comparing them to the existing document.
      let protectedFieldsUnchanged = requestData.uid == resourceData.uid &&
                                     requestData.email == resourceData.email &&
                                     requestData.ecoPoints == resourceData.ecoPoints;

      return onlyAllowedFieldsArePresent && protectedFieldsUnchanged;
    }

    function isIncrementingEcoPoints(requestData, resourceData) {
      // Checks that the only field in the update request is 'ecoPoints'.
      let onlyEcoPointsChanged = request.resource.data.keys().size() == 1 && 'ecoPoints' in request.resource.data;
      
       // Ensures ecoPoints are only ever increased. This works for increments.
      let pointsIncreased = requestData.ecoPoints > resourceData.ecoPoints;
                                  
      return onlyEcoPointsChanged && pointsIncreased;
    }

    // USERS collection
    match /users/{userId} {
      // Anyone can see anyone else's profile for leaderboard purposes
      allow read: if true;

      // A user can only create their own profile
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && request.resource.data.ecoPoints == 0;

      // A user can EITHER update their profile OR increment their ecoPoints
      allow update: if isOwner(userId) && 
                       (isUpdatingProfile(request.resource.data, resource.data) ||
                        isIncrementingEcoPoints(request.resource.data, resource.data));

      // Users cannot delete their profiles
      allow delete: if false;
    }
  }
}

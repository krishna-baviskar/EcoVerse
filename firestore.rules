rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS collection
    match /users/{userId} {
      // Anyone can see anyone else's profile for leaderboard purposes
      allow read: if true;

      // A user can only create their own profile
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && request.resource.data.ecoPoints == 0;

      // A user can update their own displayName and photoURL
      // ecoPoints can only be incremented, not set directly
      allow update: if isOwner(userId)
                    && request.resource.data.uid == resource.data.uid
                    && request.resource.data.email == resource.data.email
                    && request.resource.data.ecoPoints == resource.data.ecoPoints + request.resource.data.pointsIncrement;

      // Users cannot delete their profiles
      allow delete: if false;
    }
  }
}

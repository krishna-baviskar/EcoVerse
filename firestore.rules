rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // This function checks if a user is updating ONLY their allowed profile fields.
    // It makes sure no other fields (like ecoPoints) are being illegally changed.
    function isUpdatingAllowedProfileFields() {
      // The list of fields a user is allowed to change on their profile.
      let allowedFields = ['displayName', 'photoURL', 'location'];
      // Get all the fields the user is trying to change in this request.
      let incomingKeys = request.resource.data.keys();

      // Ensure that every key in the incoming request is in our allowed list.
      let allKeysInRequestAreAllowed = incomingKeys.hasOnly(allowedFields);
      
      // Crucially, ensure ecoPoints is NOT part of this update request.
      let ecoPointsIsUnchanged = !('ecoPoints' in request.resource.data);

      return allKeysInRequestAreAllowed && ecoPointsIsUnchanged;
    }

    // This function securely checks if a user is ONLY incrementing their ecoPoints.
    function isSecurelyIncrementingEcoPoints() {
      // This ensures that 'ecoPoints' is the ONLY field in the update request.
      let onlyEcoPointsIsPresent = request.resource.data.keys().size() == 1 && 
                                 'ecoPoints' in request.resource.data;
      
      // This is the crucial part: it verifies that the new ecoPoints value is
      // greater than the old one. This works for `increment()` operations.
      let pointsAreIncreased = request.resource.data.ecoPoints > resource.data.ecoPoints;

      return onlyEcoPointsIsPresent && pointsAreIncreased;
    }


    // USERS collection rules
    match /users/{userId} {
      // Anyone can read any profile for leaderboards.
      allow read: if true;

      // A user can only create their own profile document.
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && request.resource.data.ecoPoints == 0;

      // A user can EITHER update their profile OR increment their ecoPoints.
      // The two cases are handled by separate helper functions for clarity and security.
      allow update: if isOwner(userId) && 
                       (isUpdatingAllowedProfileFields() || isSecurelyIncrementingEcoPoints());

      // Users cannot delete their own accounts through the app.
      allow delete: if false;
    }
  }
}
